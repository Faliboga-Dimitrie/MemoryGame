<Window x:Class="MemoryGame.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MemoryGame.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Name="Yolo" DataContext="{Binding Source={x:Static local:UsersViewModel.Instance}}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ListBox for Registered Users -->
        <ListBox Grid.Column="0" Grid.Row="0" Name="lbUsers" 
                 DisplayMemberPath="Username"
                 ItemsSource="{Binding Users}"
                 SelectedItem="{Binding SelectedUser}">
        </ListBox>

        <!-- Profile Image for Selected User -->
        <Image Grid.Column="1" Grid.Row="0" Name="imgProfile" 
               Width="300" Height="300" 
               HorizontalAlignment="Center" VerticalAlignment="Center" 
               Source="{Binding SelectedUser.ProfilePicturePath}" />
        <!-- Buttons Below the ListBox -->
        <StackPanel Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Register" Margin="25" Click="RegisterUser_Click"/>
            <Button Content="Delete User" Margin="25" Command="{Binding DeleteUserCommand}"/>
            <Button Content="Play" Margin="25" Command="{Binding StartGameCommand}"/>
            <Button Content="Exit Game" Margin="25" Click="ExitButton_Click"/>
        </StackPanel>

    </Grid>
</Window>

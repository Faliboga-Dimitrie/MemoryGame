<Window x:Class="MemoryGame.Views.StatisticsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MemoryGame.Views"
        mc:Ignorable="d"
        Title="StatisticsWindow" Height="450" Width="800" Background="#2A2A2A">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ListView with Statistics -->
        <ListView Grid.Row="0" Name="lvStatistics" Margin="20" Background="#333" BorderBrush="#444" BorderThickness="1" Foreground="White" FontFamily="Segoe UI" FontSize="14">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Nume Utilizator" Width="150" 
                                    DisplayMemberBinding="{Binding UserName}" HeaderContainerStyle="{StaticResource {x:Type GridViewColumnHeader}}" />
                    <GridViewColumn Header="Jocuri Jucate" Width="100" 
                                    DisplayMemberBinding="{Binding GamesPlayed}" HeaderContainerStyle="{StaticResource {x:Type GridViewColumnHeader}}"/>
                    <GridViewColumn Header="Jocuri Castigate" Width="100" 
                                    DisplayMemberBinding="{Binding GamesWon}" HeaderContainerStyle="{StaticResource {x:Type GridViewColumnHeader}}"/>
                </GridView>
            </ListView.View>
        </ListView>

        <!-- Close Button with Style -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="20">
            <Button Content="Close" Margin="5" Click="btnClose_Click" Padding="10,5" FontSize="16" FontWeight="Bold" Background="#4A90E2" Foreground="White" BorderBrush="#3A7BD5" BorderThickness="1" >
                <Button.Style>
                    <Style TargetType="Button">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#357ABD"/>
                                <Setter Property="Cursor" Value="Hand"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#2A649A"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>
    </Grid>

</Window>

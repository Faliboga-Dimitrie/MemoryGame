<Window x:Class="MemoryGame.Views.StatisticsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MemoryGame.Views"
        mc:Ignorable="d"
        Title="StatisticsWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ListView Grid.Row="0" Name="lvStatistics" Margin="10">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Nume Utilizator" Width="150" 
                                    DisplayMemberBinding="{Binding UserName}"/>
                    <GridViewColumn Header="Jocuri Jucate" Width="100" 
                                    DisplayMemberBinding="{Binding GamesPlayed}"/>
                    <GridViewColumn Header="Jocuri Castigate" Width="100" 
                                    DisplayMemberBinding="{Binding GamesWon}"/>
                </GridView>
            </ListView.View>
        </ListView>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
            <Button Content="Close" Margin="5" Click="btnClose_Click"/>
        </StackPanel>
    </Grid>
</Window>

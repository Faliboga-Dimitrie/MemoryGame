<Window x:Class="MemoryGame.Views.StartGameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MemoryGame.ViewModels"
        mc:Ignorable="d"
        Title="StartGameWindow" Height="450" Width="800">

    <Grid Name="yolo3" DataContext="{Binding Source={x:Static local:GameEngineViewModel.Instance}}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Menu Section -->
        <Menu Grid.Row="0">
            <MenuItem Header="File">
                <MenuItem Header="Category">
                    <ComboBox Name="cmbCategories" Width="120" 
                        SelectedItem="{Binding SelectedCategory}">
                        <ComboBoxItem>Animals</ComboBoxItem>
                        <ComboBoxItem>Landmarks</ComboBoxItem>
                        <ComboBoxItem>Vehicles</ComboBoxItem>
                    </ComboBox>
                    <Button Command="{Binding CategoryCommand}" Content="Load Category" />
                </MenuItem>
                <Separator/>
                <MenuItem Header="New Game"  Command="{Binding NewGameCommand}"/>
                <MenuItem Header="Open Game" />
                <MenuItem Header="Save Game" />
                <MenuItem Header="Statistics" Click="StatisticsDisplay_Click"/>
                <Separator/>
                <MenuItem Header="Exit" Click="Exit_Click"/>
            </MenuItem>

            <MenuItem Header="Options">
                <Button Content="{Binding ButtonContent}" Command="{Binding SelectGameTypeCommand}"/>
            </MenuItem>

            <MenuItem Header="Help">
                <MenuItem Header="About" Command="{Binding AboutCommand}"/>
            </MenuItem>
        </Menu>

        <StackPanel VerticalAlignment="Center">
            <TextBlock Text="{Binding TimeTracker.RemainingTime, StringFormat='mm\\:ss'}" 
                   FontSize="22" HorizontalAlignment="Center"/>
        </StackPanel>

        <!-- Game Grid Placeholder -->
        <Border Grid.Row="2" Margin="10" BorderBrush="Gray" BorderThickness="1" Visibility="{Binding GameSpecifier}">
            <StackPanel>
                <!-- Grouped Section -->
                <Border Margin="5" BorderBrush="DarkGray" BorderThickness="1">
                    <StackPanel Margin="5">
                        <TextBlock Text="Set Time Seconds" Margin="2"/>
                        <TextBox x:Name="TimeSeconds" Margin="2" Text="{Binding TimeTracker.Seconds}"/>

                        <TextBlock Text="Set Time Minutes" Margin="2"/>
                        <TextBox x:Name="TimeMinutes" Margin="2" Text="{Binding TimeTracker.Minutes}"/>
                    </StackPanel>
                </Border>

                <Border Margin="5" BorderBrush="DarkGray" BorderThickness="1" Visibility="{Binding IsCustomGame}">
                    <StackPanel Margin="5">
                        <TextBlock Text="Set Number of Rows" Margin="2" />
                        <TextBox x:Name="NoRows" Margin="2" Text="{Binding GridLoader.Rows}"/>

                        <TextBlock Text="Set Number of Columns" Margin="2"/>
                        <TextBox x:Name="NoColumns" Margin="2" Text="{Binding GridLoader.Columns}"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>

        <Border Grid.Row="2" Margin="10" BorderBrush="Gray" BorderThickness="1" Visibility="{Binding GameStarted}">
            <ItemsControl ItemsSource="{Binding GridLoader.Cells}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="{Binding GridLoader.Columns}" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="2" BorderBrush="Gray" BorderThickness="1" 
                            Visibility="{Binding Visibility}">
                            <Button Command="{Binding DataContext.FlipCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                            CommandParameter="{Binding}">
                                <Image Source="{Binding CurrentImage}" />
                                <!--<TextBlock Text="{Binding CurrentImage}"/>-->
                            </Button>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Border>
    </Grid>
</Window>

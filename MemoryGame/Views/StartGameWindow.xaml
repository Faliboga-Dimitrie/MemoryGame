<Window x:Class="MemoryGame.Views.StartGameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MemoryGame.Views"
        mc:Ignorable="d"
        Title="StartGameWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Menu Section -->
        <Menu Grid.Row="0">
            <MenuItem Header="File">
                <MenuItem Header="Category">
                    <ComboBox Name="cmbCategories" Width="120">
                        <ComboBoxItem>Animals</ComboBoxItem>
                        <ComboBoxItem>Landmarks</ComboBoxItem>
                        <ComboBoxItem>Vehicles</ComboBoxItem>
                    </ComboBox>
                </MenuItem>
                <Separator/>
                <MenuItem Header="New Game" />
                <MenuItem Header="Open Game" />
                <MenuItem Header="Save Game" />
                <MenuItem Header="Statistics" Click="StatisticsDisplay_Click"/>
                <Separator/>
                <MenuItem Header="Exit" Click="Exit_Click"/>
            </MenuItem>

            <MenuItem Header="Options">
                <MenuItem Header="Standard" IsCheckable="True" IsChecked="True" />
                <MenuItem Header="Custom" IsCheckable="True" />
            </MenuItem>

            <MenuItem Header="Help">
                <MenuItem Header="About" />
            </MenuItem>
        </Menu>

        <!-- Game Grid Placeholder -->
        <Border Grid.Row="2" Margin="10" BorderBrush="Gray" BorderThickness="1">
            <TextBlock Text="Game Grid Will Appear Here" 
                      HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>

        <!-- Custom Options Panel -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="10" 
                   Visibility="Collapsed" Name="pnlCustom">
            <TextBlock Text="Rows (2-6):" VerticalAlignment="Center"/>
            <TextBox Width="40" Margin="5" Name="txtRows"/>
            <TextBlock Text="Columns (2-6):" VerticalAlignment="Center" Margin="10 0 5 0"/>
            <TextBox Width="40" Margin="5" Name="txtColumns"/>
            <CheckBox Content="Even Number of Tiles" IsChecked="True" 
                     VerticalAlignment="Center" Margin="10 0 0 0" IsEnabled="False"/>
        </StackPanel>
    </Grid>
</Window>
